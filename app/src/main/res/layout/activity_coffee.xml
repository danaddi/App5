<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp">
    <Space
        android:layout_width="match_parent"
        android:layout_height="48dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_coffee"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Добавить кофе"/>

        <Button
            android:id="@+id/btn_add_coffee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"/>
    </LinearLayout>

    <ListView
        android:id="@+id/lv_coffee"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:choiceMode="multipleChoice"/>

    <Button
        android:id="@+id/btn_remove_coffee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Удалить выбранное"/>
    <EditText
        android:id="@+id/et_coffee"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="Добавить кофе"
        android:inputType="text" />  <!-- Разрешает ввод любого текста, включая русский -->
</LinearLayout>